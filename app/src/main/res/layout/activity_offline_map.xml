<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OFFdrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.souravdutta.dutta.OfflineMap">
    <LinearLayout
        android:id="@+id/OFFbottom_Nav_Main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/map_layout"/>
        <FrameLayout
            android:id="@+id/OFFmain_content_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">



        </FrameLayout>

    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/OFFnav_View"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nv_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/offline_menu"
        android:layout_gravity="start"        />





</android.support.v4.widget.DrawerLayout>





